<openerp>
  <data>
    <record id="view_delivery_carrier_form" model="ir.ui.view">
      <field name="name">delivery.carrier.pickup.form</field>
      <field name="model">delivery.carrier</field>
      <field name="inherit_id" ref="delivery.view_delivery_carrier_form" />
      <field name="arch" type="xml">
        <field name="product_id" position="after">
          <field name="pickup_location" />
        </field>
      </field>
    </record>
    
    
    <template id="payment_delivery" name="Delivery Costs Pickup Location" inherit_id="website_sale_delivery.payment_delivery">
        <xpath expr="//div[@t-field='delivery.website_description']" position="before">
                <span><t t-raw="delivery.data_input"/></span>
        </xpath>
    </template>

    <template id="assets_frontend" inherit_id="website.assets_frontend" name="Delivery Pickup Location">
      <xpath expr="." position="inside">
        <script type="text/javascript" src="/delivery_pickup/static/src/js/delivery_pickup.js"></script>
      </xpath>
    </template>
    
  </data>
</openerp>